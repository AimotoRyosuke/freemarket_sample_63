%nav.bread-crumbs 
  = render_breadcrumbs tag: :span, separator: ' > '
.card
  = link_to "", class: "menu-bar" do
    %p.menu-bar__title 支払い方法
    = icon "fas", "angle-right", class: "menu-bar__icon"
  = render "shared/user-side"
  .main
    %h3.top 支払い方法
    .form
      %p.form__title クレジットカード一覧
      - if @card
        .form__credit
          =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?1855818912", size: "49x15", alt: "VISA"

          = link_to "削除する",  card_path(current_user,@card), method: :delete, class: "form__credit__delete"
          %p.form__credit__number= "**** **** **** " + @default_card_information.last4
          - exp_month = @default_card_information.exp_month.to_s
          - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
          = exp_month + " / " + exp_year
      - else
        = link_to "クレジットカードを追加する",  new_user_card_path, class: "form__add"
      .form__about
        = link_to "支払い方法について", "", class: "form__about__text"