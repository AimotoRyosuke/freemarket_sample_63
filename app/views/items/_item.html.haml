%li.new__items__list__item
  = link_to item_path(item) do
    .new__items__list__item__upper
      %span.new__items__list__item__upper__price
        Â¥
        = item.price.to_s(:delimited)

        %br
      - if item.status_id != 1 && item.status_id != 4
        .new__items__list__item__upper__badge
        .new__items__list__item__upper__badge__sold
          SOLD
      = image_tag item.images[0].image.url, class: 'new__items__list__item__upper__btm'
    .new__items__list__item__description 
      %p= item.name
      
