%nav.bread-crumbs 
  %span.bread-crumbs__page メルカリ
  = icon "fas", "angle-right", class: "bread-crumbs__icon"
  %span.bread-crumbs__page マイページ
  = icon "fas", "angle-right", class: "bread-crumbs__icon"
  %span.bread-crumbs__page#in-page 支払方法

.credit
  = link_to "", class: "menu-bar" do
    %p.menu-bar__title 支払い方法
    = icon "fas", "angle-right", class: "menu-bar__icon"
  = render "shared/user-side"
  .main
    %h3.top 支払い方法
    .form
      %p.form__title クレジットカード一覧
      - if @credit
        .form__credit
          =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?1855818912", size: "49x15", alt: "VISA"

          = link_to "削除する", user_credit_path(id: @credit.id), method: :delete, class: "form__credit__delete"
          %p.form__credit__number= "************" + @credit.number[-4..-1]
          %p.form__credit__limit= @credit.month.strftime("%m") + " / " + "#{@credit.year.strftime("%Y").to_i}"
      - else
        = link_to "クレジットカードを追加する",  new_user_credit_path, class: "form__add"
      .form__about
        = link_to "支払い方法について", "", class: "form__about__text"