.wrapper
  .registraton
    %p
    = link_to signup_path do
      %p 新規会員登録

  .signin
    .signin__facebook
      -# = link_to signup_facebook_path do
      = fa_icon 'facebook'
      %p Facebookでログイン
    .signin__google
      -# = link_to signup_google_path do
      = fa_icon 'google'
      %p Googleで登録する

    = form_with model: @user, url: user_session_path, local: true, class:'signin__form' do |f|
      = f.email_field :email, placeholder: "メールアドレス"
      = f.password_field :password, placeholder: "パスワード"
      = f.submit "ログイン"

