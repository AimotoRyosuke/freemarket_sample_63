%header.sub-header
  = link_to root_path, class: "credit-header__logo" do
    = image_tag "fmarket_logo_red.svg", size: "185x49", alt: "mercari"
  %ol.nav
    %li.nav__box
      %p.nav__box__progress 会員情報
      .nav__box__status#status
        .nav__box__status__bar1#bar
    %li.nav__box
      %p.nav__box__progress 電話番号認証
      .nav__box__status#status
        .nav__box__status__bar2#bar
    %li.nav__box
      %p.nav__box__progress お届け先住所入力
      .nav__box__status#status
        .nav__box__status__bar3#bar
    %li.nav__box
      %p.nav__box__progress 支払い方法
      .nav__box__status#status
        .nav__box__status__bar4#bar
    %li.nav__box
      %p.nav__box__progress#progress 完了
      .nav__box__status#status

.complete
  %h2.top 会員登録完了
  .form
    .form__comment
      %p  ありがとうございます。
      %p  会員登録が完了しました。
    = link_to "メルカリをはじめる", root_path, class: "form__submit"
%aside.banner
  .banner__container
    .banner__container__downloads
      .banner__container__downloads__head
        スマホでかんたんフリマアプリ
      .banner__container__downloads__head2
        今すぐ無料ダウンロード！
      .banner__container__downloads__logos
        .banner__container__downloads__logos__icon
          = render "shared/logo_red"
        = link_to '', class: "banner__container__downloads__logos__appstore" do
          = render "shared/appstore"
        = link_to '', class: "banner__container__downloads__logos__googleplay" do
          = render "shared/googleplay"
    .banner__container__image
      = image_tag '/assets/footerbannerright.png'